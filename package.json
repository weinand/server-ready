{
	"name": "server-ready",
	"displayName": "server-ready",
	"description": "Open uri if server under debugging is ready",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onDebug",
		"onDebugAdapterProtocolTracker"
	],
	"main": "./out/extension",
	"contributes": {
		"debuggers": [
			{
				"type": "node",
				"configurationAttributes": {
					"launch": {
						"properties": {
							"serverReadyAction": {
								"type": "object",
								"markdownDescription": "Server ready options.",
								"default": {
									"pattern": "listening on port ([0-9]+)"
								},
								"properties": {
									"pattern": {
										"type": "string",
										"markdownDescription": "Server is ready if this pattern appears on the debug console. The first group must include the port number.",
										"default": "listening on port ([0-9]+)"
									},
									"urlFormat": {
										"type": "string",
										"markdownDescription": "Server is ready if this pattern appears on the debug console. The first group must include the port number.",
										"default": "http://localhost:%s"
									},
									"webRoot": {
										"type": "string",
										"markdownDescription": "Passed to debug configuration.",
										"default": "${workspaceFolder}"
									},
									"debug": {
										"type": "boolean",
										"markdownDescription": "Server is ready if this pattern appears on the debug console.",
										"default": false
									}
								}
							}
						}
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/node": "8.0.33"
	}
}